extends base

block body
	div(ng-controller="MainIndexController").large-12.columns
		fieldset
			legend Filter
			input(type="text", ng-model="filtr", placeholder="filter")

		.medium-4.large-3.small-12.columns(ng-repeat="object in objects | filter: filtr")
			a(ng-href="/shows/{{ object.ID }}")
				h4.subheader  {{ object.TITLE }}
				img.thumbnail(ng-src="#{imageserver}/{{ object.THUMBNAIL }}")